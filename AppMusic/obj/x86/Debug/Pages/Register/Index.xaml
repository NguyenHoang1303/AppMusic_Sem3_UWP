<Page
    x:Class="AppMusic.Pages.Register.Index"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppMusic.Pages.Register"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Width="1500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="1" Margin="0,25,0,20">
            <TextBlock Text="Register" FontSize="25" HorizontalAlignment="Center" FontWeight="SemiBold"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <TextBox x:ConnectionId='24'  Header="Họ:" x:Name="txtFirstName" HorizontalAlignment="Left" Width="225" />
                <TextBlock x:ConnectionId='25' x:Name="errorFirstName" Visibility="Collapsed"   Text="* Họ không được để trống" Foreground="Red" FontSize="12" Margin="0,56,-1,-17"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <TextBox x:ConnectionId='22'  Header="Tên:" x:Name="txtLastName" HorizontalAlignment="Right" Width="225" />
                <TextBlock x:ConnectionId='23' x:Name="errorLastName" Visibility="Collapsed"  Text="* Tên không được để trống" Foreground="Red" FontSize="16" Padding="22,0,0,0" Margin="0,55,-1,-17"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <TextBox x:ConnectionId='20'  Header="Email:" x:Name="txtEmail" HorizontalAlignment="Left" Width="225" />
                <TextBlock x:ConnectionId='21' x:Name="errorEmail" Visibility="Collapsed"  Text="* Email không được để trống" Foreground="Red" FontSize="12" Margin="0,56,-1,-17"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <TextBox x:ConnectionId='18'  Header="Số điện thoại:" x:Name="txtPhone" HorizontalAlignment="Right" Width="225" />
                <TextBlock x:ConnectionId='19' x:Name="errorPhone" Visibility="Collapsed" Text="* Số điện thoại không được để trống" Foreground="Red" FontSize="12" Padding="22,0,0,0" Margin="0,55,-1,-29"/>
            </Grid>
        </Grid>
       
        <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,20">
            <TextBox x:ConnectionId='16'  Header="Địa chỉ:" x:Name="txtAddress" HorizontalAlignment="Center" Width="500" />
            <TextBlock x:ConnectionId='17' x:Name="errorAddress" Visibility="Collapsed"  Text="* Địa chỉ không được để trống" Foreground="Red" FontSize="12" Margin="0,61,0,-17"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,0,20">
            <TextBox x:ConnectionId='14'  Header="Ảnh đại diện:" x:Name="txtAvatar" HorizontalAlignment="Center" Width="500" />
            <TextBlock x:ConnectionId='15' x:Name="errorAvatar" Visibility="Collapsed"  Text="* Ảnh đại diện không được để trống" Foreground="Red" FontSize="12" Margin="0,61,0,-17"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <TextBox x:ConnectionId='12'  Header="Mật khẩu:" x:Name="txtPassword" HorizontalAlignment="Left" Width="225" />
                <TextBlock x:ConnectionId='13' x:Name="errorPassword" Visibility="Collapsed"  Text="* Mật khẩu không được để trống" Foreground="Red" FontSize="12" Margin="0,56,-1,-17"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <TextBox x:ConnectionId='10'  Header="Xác Nhận Mật khẩu:" x:Name="txtConfirmPassword" HorizontalAlignment="Right" Width="225" />
                <TextBlock x:ConnectionId='11' x:Name="errorConfirmPassword" Text="" Foreground="Red" FontSize="12" Padding="22,0,0,0" Margin="0,56,-1,-17"/>
            </Grid>
        </Grid>
       
        <Grid Grid.Row="6" Grid.Column="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Gender:" Margin="0,0,0,5"/>
            <RadioButton x:ConnectionId='6' Grid.Column="0" Grid.Row="1" Content="Nam" Margin="0 0 0 10" VerticalAlignment="Top" GroupName="gender"                              />
            <RadioButton x:ConnectionId='7' Grid.Column="1" Grid.Row="1" Content="Nữ" Margin="0 0 0 10" VerticalAlignment="Top" GroupName="gender"                              />
            <RadioButton x:ConnectionId='8' Grid.Column="2" Grid.Row="1" Content="Khác" Margin="0 0 0 10" VerticalAlignment="Top" GroupName="gender"                              />
            <TextBlock x:ConnectionId='9' Grid.Column="0" Grid.Row="2" x:Name="errorGender" Visibility="Collapsed" Text="* Giới tính không được để trống" Foreground="Red" FontSize="12" Grid.ColumnSpan="2" />
        </Grid>
        <Grid Grid.Row="7" Grid.Column="1" Margin="0,0,0,20">
            <CalendarDatePicker x:ConnectionId='4' x:Name="dtmDob" DateFormat="{}{day.integer}-{month.integer}-{year.full}" Margin="0 0 0 10" Width="500" Header="Ngày sinh:"                                  />
            <TextBlock x:ConnectionId='5' x:Name="errorDob" Visibility="Collapsed" Text="* Ngày sinh không được để trống" Foreground="Red" FontSize="12" Margin="0,61,0,-32"/>
        </Grid>
        <Grid Grid.Row="8" Grid.Column="1" Margin="0,0,0,20">
            <TextBox x:ConnectionId='3' x:Name="txtIntroduction"  Width="500" Header="Giới thiệu bản thận:"  />
        </Grid>
        <Grid Grid.Row="9" Grid.Column="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Content="Tạo tài khoản" HorizontalAlignment="Center" />
            <Button x:ConnectionId='2' Grid.Column="2" Grid.Row="0" Content="Đăng nhập" HorizontalAlignment="Center"                              />
        </Grid>



    </Grid>
</Page>

